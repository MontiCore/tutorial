// Model of a door
<<pattern="enum">>
automaton Door {
  <<log="error">>
  state Close <<initial>> <<final>> {
    state Closing <<initial>>;
    state Closed;
    state Opening;
    Closing - motor > Closed;
    Closed - motor > Opening;
  }
  state Open;

  <<monitored>>
  Close - buttonPressed > Open;
  Open - timeOut > Close;
}

