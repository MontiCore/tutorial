<<pattern="enum">>
automaton Hierarchical {

  state InService {
    state Active;
    state Standby <<initial>>;

    Active - switchover > Standby;
    Standby - switchover > Active;
    Active - faultTrigger > OutOfService.Suspect;
    Standby - faultTrigger > OutOfService.Suspect;
  }

  state OutOfService <<initial>> <<final>> {
    state Suspect <<initial>>;
    state Failed;

    Suspect - diagnosticsFailed > Failed;
    Failed - operatorInservice > Suspect;
    Suspect - diagnosticsPassed > InService.Standby;
  }

}